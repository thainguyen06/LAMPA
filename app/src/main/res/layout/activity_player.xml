<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">

    <!-- LibVLC Video Surface -->
    <org.videolan.libvlc.util.VLCVideoLayout
        android:id="@+id/vlc_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top overlay with Back button, title, and system time -->
    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:padding="20dp"
        android:paddingTop="24dp"
        android:background="@drawable/modern_controls_gradient_top"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/modern_button_bg"
            android:contentDescription="@string/back"
            android:padding="14dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFFFFF"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="00:00"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />
    </LinearLayout>

    <!-- Center controls - Play/Pause and Loading -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/modern_play_pause_bg"
            android:contentDescription="@string/exo_controls_play_description"
            android:padding="32dp"
            android:src="@android:drawable/ic_media_play"
            android:tint="#FFFFFF"
            android:scaleType="fitCenter"
            android:alpha="0.95"
            android:elevation="12dp" />

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"
            style="?android:attr/progressBarStyle" />
    </FrameLayout>

    <!-- Bottom controls overlay -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="24dp"
        android:background="@drawable/modern_controls_gradient"
        android:elevation="8dp">

        <!-- Progress bar with full width -->
        <SeekBar
            android:id="@+id/player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:progressDrawable="@drawable/modern_seekbar_progress"
            android:thumb="@drawable/modern_seekbar_thumb"
            android:minHeight="8dp"
            android:maxHeight="8dp"
            android:splitTrack="false" />

        <!-- Time info row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="3" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_duration_ends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:30:00 | Ends at 22:45"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="3" />
        </LinearLayout>

        <!-- Bottom button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_track_selection"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/modern_button_bg"
                android:contentDescription="@string/track_selection_title"
                android:padding="14dp"
                android:src="@drawable/ic_subtitles_24"
                android:tint="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btn_load_subtitle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/modern_button_bg"
                android:contentDescription="Load Subtitles"
                android:padding="14dp"
                android:src="@drawable/ic_playlist_add_24"
                android:tint="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btn_aspect_ratio"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/modern_button_bg"
                android:contentDescription="Aspect Ratio"
                android:padding="14dp"
                android:src="@android:drawable/ic_menu_crop"
                android:tint="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btn_subtitle_settings"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/modern_button_bg"
                android:contentDescription="@string/subtitle_settings"
                android:padding="14dp"
                android:src="@drawable/ic_settings_24"
                android:tint="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
