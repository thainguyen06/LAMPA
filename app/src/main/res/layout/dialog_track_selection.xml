<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/track_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/track_selection_title"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Audio Tracks Section -->
    <TextView
        android:id="@+id/audio_tracks_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_tracks"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/audio_tracks_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle Tracks Section -->
    <TextView
        android:id="@+id/subtitle_tracks_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_tracks"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/subtitle_tracks_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Close Button -->
    <Button
        android:id="@+id/btn_close_tracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/bg_button_dialog"
        android:padding="12dp"
        android:textAllCaps="false" />

</LinearLayout>
