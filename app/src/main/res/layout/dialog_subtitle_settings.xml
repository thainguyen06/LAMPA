<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/subtitle_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_settings"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Font Size Section -->
    <TextView
        android:id="@+id/font_size_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_font_size"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/font_size_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/font_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_size_small"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/font_size_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_size_medium"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/font_size_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_size_large"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Font Color Section -->
    <TextView
        android:id="@+id/font_color_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_font_color"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/font_color_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/font_color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_white"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/font_color_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_yellow"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/font_color_cyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_cyan"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Background Section -->
    <TextView
        android:id="@+id/background_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_background"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/background_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/background_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/background_transparent"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/background_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/background_black"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/background_semitransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/background_semitransparent"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Subtitle Sync Section -->
    <TextView
        android:id="@+id/subtitle_sync_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_sync"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_subtitle_delay_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_dialog"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_subtitle_delay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0s"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginHorizontal="16dp" />

        <Button
            android:id="@+id/btn_subtitle_delay_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_dialog"
            android:padding="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/subtitle_sync_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_sync_hint"
        android:textColor="#999999"
        android:textSize="12sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Close Button -->
    <Button
        android:id="@+id/btn_apply_subtitle_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/bg_button_dialog"
        android:padding="12dp"
        android:textAllCaps="false" />

</LinearLayout>
